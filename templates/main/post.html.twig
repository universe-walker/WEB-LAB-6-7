{% extends 'base.html.twig' %}

{% block title %}{{ post.name }}!{% endblock %}

{% block body %}

    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">{{post.author.name|e}}</h1>
            <p class="col-md-8 fs-4">{{ post.text|e }}</p>
            <h6 class="display-6 fw-bold">Просмотров: {{ post.views|e }}</h6>
        </div>
    </div>

    <div class="container mt-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <div class="card p-3">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_row(form.text) }}
                            {{ form_row(form.submit) }}
                        </div>
                        {{ form_end(form) }}
                    {% endif %}
                    {% for comment in comments %}
                    <div class="d-flex justify-content-between align-items-center">
                            <span>
                                <small class="font-weight-bold text-primary">{{ comment.author.name|e }}</small>
                                <small class="font-weight-bold">{{ comment.text|e }}</small>
                            </span>
                        </div>
                        <small>{{ comment.date|date }}</small>
                    </div>
                    <div class="action d-flex justify-content-between mt-2 align-items-center">
                        <div class="reply px-4">
                            <small>{{ comment.author.roles[0]|e }}</small>
                            <span class="dots"></span>
                        </div>
                        <div class="icons align-items-center">
                            <i class="fa fa-star text-warning"></i>
                            <i class="fa fa-check-circle-o check-icon"></i>
                        </div>
                    </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}