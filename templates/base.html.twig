<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
              rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

        <div class="container sticky-lg-top bg-gradient bg-black">
                <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between py-3 mb-4 border-bottom row">
                    <a class="d-flex align-items-center col-md-1 mb-1 mb-md-0 text-dark text-decoration-none col-1">
                    </a>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
                            <li><a href="{{ path('list')}}" class="nav-link px-2 link-secondary h6">Список постов</a></li>
                            <li><a href="{{ path('app_main') }}" class="nav-link px-2 link-secondary h6">Главная страница</a></li>
                            {% if is_granted('ROLE_ADMIN') %}
                                <li><a href="{{ path('admin') }}" class="nav-link px-2 link-secondary h6">Админ панель</a></li>
                                <li><a href="{{ path('add_post') }}" class="nav-link px-2 link-secondary h6">Добавить пост</a></li>
                            {% endif %}
                            <li><a href="#" class="nav-link px-2 link-secondary h6">Приветствуем, {{ app.user.name }}</a></li>
                            <li><a href="{{ path('app_logout') }}" class="nav-link px-2 link-secondary h6">Выход</a></li>
                        </ul>
                    {% else %}
                        <ul class="nav col-10 col-md-auto mb-2 justify-content-between mb-md-0">

                            <li><a href="{{ path('list')}}" class="nav-link px-2 link-secondary h4">Список постов</a></li>
                            <li><a href="{{ path('app_main') }}" class="nav-link px-2 link-secondary h4 mx-4">Главная страница</a></li>

                        </ul>

                        <div class="col-md-4 text-end">
                            <a href="{{ path('app_login') }}"><button type="button" class="btn btn-outline-primary me-2">Авторизация</button></a>
                            <a href="{{ path('app_register') }}"><button type="button" class="btn btn-primary">Регистрация</button></a>
                        </div>
                    {% endif %}
                </header>
        </div>

    </head>
    <body>
        {% block body %}{% endblock %}
        <div class="container">
            <footer class="py-3 my-4">
                <ul class="nav justify-content-center border-bottom pb-3 mb-3">
                    <li class="nav-item"><a href="#" class="nav-link px-2 text-muted">Мотлич Никита ПИ-19</a></li>
                </ul>
            </footer>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </body>
</html>
